<%= form_with(model: cake_stack) do |form| %>
  <% if cake_stack.errors.any? %>
    <div style="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative">
      <h2><%= pluralize(cake_stack.errors.count, "error") %> prohibited this cake_stack from being saved:</h2>

      <ul>
        <% cake_stack.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :script, style: "display: block", class: "block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" %>
    <%= form.text_area :script %>
  </div>

  <div>
    <%= form.label :msg, style: "display: block", class: "block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" %>
    <%= form.text_field :msg %>
  </div>

  <div style="margin-right: 75%" class="bg-green-700 text-white font-bold py-2 px-4 rounded">
    <%= form.submit %>
  </div>
<% end %>
